/* pages/search/searchRes.wxss */
.container-searchRes {}

.section1 {
  background: #FFFFFF;
  display: flex;
  padding: 0 24rpx;
  justify-content: space-between;
  align-items: center;
}

.section1 .input-box {
  position: relative;
  width: 616rpx;
  height: 68rpx;
  padding-left: 70rpx;
  border-radius: 36rpx;
  background: #F6F6F6;
}

.section1 .input-box .search {
  height: 100%;
  font-size: 30rpx;
  color: #333333;
}

.section1 .input-box .icon-search {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 24rpx;
  width: 30rpx;
  height: 30rpx;
}

.section1 .input-box .icon-close {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 14rpx;
  top: 50%;
  transform: translateY(-50%);
}

.section1 .icon-cart {
  width: 62rpx;
  height: 62rpx;

}

.section2 {}

.section2 .l1 {
  display: flex;
  height: 72rpx;
}

.section2 .l1>view {
  flex: 1;
  text-align: center;
  line-height: 72rpx;
  background: #FFFFFF;
  font-size: 28rpx;
  color: #333333;
}

.section2 .l1 .price {
  display: flex;
  justify-content: center;
}

.section2 .l1 .price text {
  /* display: inline-block; */
}

.section2 .l2 {}

.section2 .triangle-box {
  /* display: inline-block; */
  /* width: 40rpx; */
  height: 100%;
  margin-left: 12rpx;
}

.section2 .triangle-box .triangle {
  /* display: inline-block; */
  width: 0;
  height: 0;
}

.section2 .triangle-t {
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid #BBBBBB;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  margin: 15rpx 0 9rpx;
}

.section2 .triangle-b {
  border-top: 10rpx solid #BBBBBB;
  border-bottom: 10rpx solid transparent;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
}

.section2 .l2 .list {
  padding: 0 24rpx;
}

.section2 .l2 .list .item {
  width: 336rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}

.section2 .l2 .list .item .item-image {
  width: 336rpx;
  height: 336rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}


.section2 .l2 .list .item .item-content {
  padding: 0 20rpx;
}

.section2 .l2 .list .item .item-content {
  padding-top: 15rpx;
}

.section2 .l2 .list .item .item-content .l1 {
  font-size: 26rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #333333;
  height: 80rox;
}

.section2 .l2 .list .item .item-content .l2 {
  display: flex;
  justify-content: space-between;
}

.section2 .l2 .list .item .item-content .l2 .price-box {
  display: flex;
  align-items: flex-end;
}

.section2 .l2 .list .item .item-content .l2 .image-box {
  margin-top: 5rpx;
  position: relative;
}

.section2 .l2 .list .item .item-content .l2 .image-box .icon-cart-g {
  width: 54rpx;
  height: 54rpx;
  background: linear-gradient(140deg, #27C068 0%, #22B862 100%);
  box-shadow: 0rpx 0px 12rpx rgba(34, 184, 98, 0.35);
  border-radius: 50%;
}

.section2 .l2 .list .item .item-content .l2 .image-box .tip {
  position: absolute;
  width: 30rpx;
  height: 24rpx;
  background: #FA4953;
  border-radius: 12rpx;
  border-radius: 12rpx;
}

.section2 .l2 .list .item .item-content .l2 .price text:first-child {
  font-size: 24rpx;
  font-weight: bold;
  color: #DB0512;
}

.section2 .l2 .list .item .item-content .l2 .price text:last-child {
  font-size: 34rpx;
  font-weight: bold;
  color: #DB0512;
}

.section2 .l2 .list .item .item-content .l2 .del-price {
  font-size: 22rpx;
  color: #888888;
}