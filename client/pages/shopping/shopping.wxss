  background-size: 100% 100%;
  width: 17rpx;
  height: 8rpx;
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
}

.reduce {
  width: 44rpx;
  height: 44rpx;
}

.quantity {
  margin: 0 8rpx;
  text-align: center;
  width: 75rpx;
  height: 44rpx;
  background: #F4F4F4;
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
}

.add {
  width: 44rpx;
  height: 44rpx;
}

.section2 .item .center {
  display: flex;
  align-items: center;
}

.section2 .item .center .icon-goods-box {
  width: 172rpx;
  height: 172rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
}

.section2 .item .center .icon-goods {
  width: 100%;
  height: 100%;
}

.section2 .item.mask-box .center .icon-goods-box .mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #333333;
  opacity: 0.5;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 172rpx;
  text-align: center;
}

.section2 .item .right {
  margin-left: 24rpx;
  width: 426rpx;
  padding-top: 20rpx;
}

.section2 .item.mask-box .right {
  opacity: 0.5;
}

.section2 .item .right .l1 {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 38rpx;
  color: #333333;
  /* display: flex;
  align-items: flex-start; */
}

.section2 .item .right .l1 .tag {
  float: left;
  margin: 5rpx 6rpx 0 0;
  text-align: center;
  width: 96rpx;
  height: 28rpx;
  background: #22B862;
  border-radius: 8rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #FFFFFF;
}

/* .section2 .item .right .l2 {
