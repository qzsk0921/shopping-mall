.section1 {
  padding-top: 20rpx;
  position: relative;
  z-index: 3;
  background: #FFFFFF;
}

.input-box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 32rpx;
}

.search {
  height: 72rpx;
  width: 594rpx;
  background: #F2F4F9;
  border-radius: 8rpx;
  border-radius: 8rpx;
  padding-left: 76rpx;
  position: relative;
}

.search::before {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  content: '';
  background-size: 100% 100%;
}

.search::before {
  left: 30rpx;
  width: 32rpx;
  height: 30rpx;
  background-image: url("data:image/png;base64,");
}

.search-placeholder {
  font-size: 30rpx;
  color: #969AAA;
}

.btn-search {
  text-align: center;
  width: 124rpx;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 72rpx;
  color: #333333;
}

