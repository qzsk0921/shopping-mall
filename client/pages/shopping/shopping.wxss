/* pages/shopping/shopping.wxss */
.container-shopping {
  background: #F5F5F5;
}

.coupon {
  margin: 20rpx 24rpx 0;
  height: 74rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 24rpx;
}

.coupon .left {
  display: flex;
  align-items: center;
}

.coupon .left .icon-coupon {
  width: 40rpx;
  height: 40rpx;
  /* background: linear-gradient(90deg, var(--primary-linear-start) 0%, var(--primary-linear-end) 100%); */
}

.coupon .left text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #333333;
}

.coupon .right {
  display: flex;
  align-items: center;
}

.coupon .right text {
  font-size: 26rpx;
  color: #888888;
  margin-right: 8rpx;
}

.coupon .right .arrow {
  width: 13rpx;
  height: 13rpx;
  border: 2rpx solid transparent;
  border-right-color: #888888;
  border-top-color: #888888;
  transform: rotate(45deg);
}

.content {
  padding: 0 24rpx 0;
  position: relative;
}

.section2 {
  overflow: hidden;
}

.section2 .item {
  margin-top: 20rpx;
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  position: relative;
}

.section2 .item .btn-close {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  top: 0;
  right: 0;
}

