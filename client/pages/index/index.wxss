.search::before {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  content: '';
  background-size: 100% 100%;
  width: 32rpx;
  height: 30rpx;
  background-image: url("data:image/png;base64,");
}

.search-placeholder {
  font-size: 30rpx;
  color: #999999;
}

.btn-search {
  position: absolute;
  font-size: 26rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 56rpx;
  right: 6rpx;
  top: 6rpx;
  z-index: 2;
  width: 120rpx;
  height: 56rpx;
  background: linear-gradient(90deg, var(--primary-linear-start) 0%, var(--primary-linear-end) 100%);
  border-radius: 40rpx;
}