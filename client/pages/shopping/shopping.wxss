/* 选择商品数量 */
.section2 .item .goods-quantity-control {
  position: absolute;
  right: 24rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
}

.section2 .item.item.mask-box .goods-quantity-control {
  opacity: 0.5;
}

.section2 .item .goods-quantity-control .tip {
  position: absolute;
  width: 136rpx;
  height: 34rpx;
  background: #FC4953;
  border-radius: 20rpx;
  bottom: calc(100% + 12rpx);
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  line-height: 34rpx;
  color: #FFFFFF;
  text-align: center;
}

