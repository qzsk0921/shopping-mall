} */

.section2 .item .right .l3 {
  font-size: 22rpx;
  line-height: 37rpx;
  color: #999999;
}

.section2 .item .right .l4 {
  margin-top: 10rpx;
}

.section2 .item .right .l4.no-sign {
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 8rpx;
}

.section2 .item .right .l4 text:first-child {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 41rpx;
  color: #FC4953;
}

.section2 .item .right .l4 text:nth-of-type(2) {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 58px;
  color: #FC4953;
}

.section2 .item .right .l4 text:nth-of-type(3) {
  margin-right: 2rpx;
  font-size: 22rpx;
  line-height: 37rpx;
  color: #888888;
  text-decoration: line-through;
}

.section2 .item .left {
  width: 80rpx;
}

.section2 .item .left .checkbox-box {
  position: relative;
  width: 100%;
  height: 100%;
}

.section2 .item .left .checkbox-box::before {
  position: absolute;
  content: '';
  top: 50%;
  transform: translateY(-50%);
  left: 22rpx;
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid var(--primary-color);
  border-radius: 50%;
}

.section2 .item .left .checkbox-box checkbox {
  width: 100%;
  height: 100%;
  opacity: 0;
}

.bottom {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  background: #FFFFFF;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.bottom .amount-box {
  display: flex;
}

.bottom .amount-box .left {
  text-align: right;
  margin-top: 20rpx;
}

.bottom .amount-box .right {
  margin-top: 10rpx;
}

.bottom .amount-box .left .left-t {}

.bottom .amount-box .left .left-t text {
  font-size: 24rpx;
  color: #333333;
}

.bottom .amount-box .left .left-t .price {
  font-size: 34rpx;
  font-weight: bold;
  color: #FC4953;
}

.bottom .amount-box .left .left-b {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: #FC4953;
}

.bottom .amount-box .btn-pay {
  margin-left: 20rpx;
  text-align: center;
  width: 210rpx;
  height: 80rpx;
  background: linear-gradient(90deg, var(--primary-linear-start) 0%, var(--primary-linear-end) 100%);
  border-radius: 40rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  color: #FFFFFF;
}

.bottom .amount-box .right .tag {
  float: left;
  margin: 8rpx 6rpx 0 0;
  text-align: center;
  width: 96rpx;
  height: 28rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #FFFFFF;
}

.bottom .amount-box .right .tag.new_activity {
  background: #FF7753;
}

.bottom .amount-box .right .tag.pre_sale {
  background: #22B862;
}