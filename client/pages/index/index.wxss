/* pages/index/index.wxss */
.container-index {}

.content {
  position: relative;
}

.bg {
  position: absolute;
  width: 100%;
  height: 513rpx;
  background: linear-gradient(180deg, var(--primary-color) 0%, var(--primary-color-a) 100%);
}

.section1 {
  position: relative;
  z-index: 3;
}

.section1 {
  margin: 0 24rpx;
}

.input-box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.search {
  padding-left: 70rpx;
  position: relative;
  width: 702rpx;
  height: 68rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
}

