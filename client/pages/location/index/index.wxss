/* pages/location/index/index.wxss */
.container-location {
  overflow: hidden;
  background: #fff;
}

.section1 {
  margin: 31rpx 24rpx 0;
  width: 702rpx;
  height: 68rpx;
  background: #F6F6F6;
  border-radius: 36rpx;
  overflow: hidden;
  display: flex;
}

.section1 .search {
  height: 100%;
  width: 576rpx;
  background: #F2F4F9;
  padding-left: 70rpx;
  position: relative;
}

.section1 .search::before {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  content: '';
  background-size: 100% 100%;
}

.section1 .search::before {
  left: 30rpx;
  width: 32rpx;
  height: 30rpx;
  background-image: url("data:image/png;base64,");
}

.section1 .search-placeholder {
  font-size: 30rpx;
  color: #969AAA;
}

.section1 .btn-search {
  margin: 6rpx 6rpx 0 0;
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #22B862;
  border-radius: 27rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  text-align: center;
}

.section2 {
  margin-top: 20rpx;
}

.section2 .l2 .btn-relocate {
  font-size: 28rpx;
  color: #11AC53;
}

.section2 .l1,
.section3 .l1 {
  height: 60rpx;
  background: #F6F6F6;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #777777;
  padding-left: 24rpx;
}

.section2 .tit,
.section3 .tit {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.section2 .number,
.section3 .number {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #777777;
}

.section3 .phone {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #777777;
}

.section2 .l2,
.section3 .l2 {
  margin: 0 24rpx;
  padding: 30rpx 0;
}

.section2 .l2 {
  display: flex;
  justify-content: space-between;
}

.section3 .deliveryAddress-box {
  overflow: auto;
  padding-bottom: 130rpx;
}

.section3 .l2 {
  display: flex;
  justify-content: space-between;
}

.section3 .l2:nth-of-type(n+3) {
  border-top: 2rpx solid #F3F3F3;
}

.list {
  position: absolute;
  width: 100vw;
  background: yellow;
  overflow: auto;
}

.list .btn-item {
  height: 100rpx;
}

.list .btn-poi.btn-active {
  color: red;
}

.footer {
  text-align: center;
  width: 616rpx;
  height: 82rpx;
  background: #22B862;
  border-radius: 43rpx;
  font-size: 32rpx;
  line-height: 82rpx;
  position: fixed;
  bottom: 48rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #FFFFFF;
}